{
  "env": {
    "vscodeIncludes": [
      "${workspaceFolder}/include/**",
      "${workspaceFolder}/**",
      "${fileDirname}/include/**", 
      "${fileDirname}/**"
    ],
    "linuxIncludes": [
      "/usr/include/**",
      "/usr/local/include/**",
      "/usr/lib/**",
      "/usr/lib/gcc/${CPUTYPE}-${VENDOR}-${OSTYPE}/8.1.1/include/**",
      "/usr/lib/modules/enabled/build/include/**"
    ],
    "gccPath": "/usr/bin/gcc",
    "preprocessor": [
      "-D_GNU_SOURCE"
    ]  
  },
  "configurations": [
    {
      "name": "MetaLinux",
      "includePath": ["${vscodeIncludes}", "${linuxIncludes}"],
      "defines": ["${preprocessor}"],
      "intelliSenseMode": "gcc-x64",
      "compilerPath": "${gccPath}",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "browse": {
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": "/tmp/vscodecpp.db"
      }
    }
  ],
  "version": 4
}
